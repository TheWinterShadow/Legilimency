{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CloudWatchReadOnly",
      "Effect": "Allow",
      "Action": [
        "cloudwatch:GetMetricStatistics",
        "cloudwatch:GetMetricData",
        "cloudwatch:ListMetrics"
      ],
      "Resource": "*",
      "Comment": "Read-only access to CloudWatch metrics. Required for YACE to collect metrics."
    },
    {
      "Sid": "ResourceTagDiscovery",
      "Effect": "Allow",
      "Action": [
        "tag:GetResources"
      ],
      "Resource": "*",
      "Comment": "Access to resource tags for auto-discovery of Lambda functions, SQS queues, etc."
    },
    {
      "Sid": "LambdaDiscovery",
      "Effect": "Allow",
      "Action": [
        "lambda:ListFunctions",
        "lambda:ListTags"
      ],
      "Resource": "*",
      "Comment": "List Lambda functions and their tags for auto-discovery."
    },
    {
      "Sid": "SQSDiscovery",
      "Effect": "Allow",
      "Action": [
        "sqs:ListQueues",
        "sqs:GetQueueAttributes",
        "sqs:ListQueueTags"
      ],
      "Resource": "*",
      "Comment": "List SQS queues and their attributes/tags for auto-discovery."
    },
    {
      "Sid": "ECSServiceDiscovery",
      "Effect": "Allow",
      "Action": [
        "ecs:ListClusters",
        "ecs:ListServices",
        "ecs:DescribeServices",
        "ecs:ListTagsForResource"
      ],
      "Resource": "*",
      "Comment": "List ECS clusters and services with tags for auto-discovery."
    },
    {
      "Sid": "APIGatewayDiscovery",
      "Effect": "Allow",
      "Action": [
        "apigateway:GET"
      ],
      "Resource": "*",
      "Comment": "Read-only access to API Gateway for service discovery."
    }
  ]
}
